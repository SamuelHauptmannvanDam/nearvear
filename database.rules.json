{
	"rules": {
		"allQuestions": {
			".indexOn": "language",
			".read": "auth != null",
			".write": "auth != null",
			"$post": {
				"creatorID": {
					".write": "!data.exists()"
				},
				"message": {
					".write": "auth.uid == data.child('creatorID').val()"
				}
			}

		},
